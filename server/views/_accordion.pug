if app_data && app_data.urls
    .accordion
        each item in app_data.urlPreview
            .accordion__item(data-delete-container-for=item.key)
                .accordion__header
                    h4= item.key
                .accordion__body
                    = item.value
                .accordion__footer
                    a.btn.btn--small(href='/' + item.key)
                        i.icon link
                        | Go to URL
                    a.btn.btn--warning.btn--small(href='#',data-delete-url=item.key)
                        i.icon warning
                        | Delete
    script(src='/js/accordion.js')
    link(rel='stylesheet', href='/css/accordion.css')
else
    p No links created yet.
