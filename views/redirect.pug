extends ./layout/page.pug

block head
    if success
        meta(http-equiv='refresh', content='7,' + href)

block content
    p.redirect
        if success
            span.preamble Redirecting to
            a.url(href=href) !{displayUrl}.
            span.count-down
                span#count-down-timer 7
                span s left
        else
            span.error #{title}

block scripts
    script(src='/js/redirect.js')
