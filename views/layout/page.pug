doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='theme-color', content='#00838F')

        if subtitle
            title #{title}: #{subtitle}
        else
            title #{title}
        block head
    body
        header
            section
                h1 #{title}
        main
            section
                block content

        footer
            section
                p Copyright &copy; 2020
                    a(href='//kalle.surf', target='_blank')  Kalle R&auml;is&auml;nen.
                div
                    if locals.user
                        p Logged in as
                            a(href='/user')= locals.user.displayName
                        p
                            a(href='/auth/logout') Log out
                    else
                        a(href='/auth/login') Log in

        link(rel='stylesheet', href='/css/style.css')

        // Start CDN
        script(src='//unpkg.com/unfetch/polyfill')
        link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lexend+Deca|Staatliches&display=swap')
        link(rel='stylesheet', href='//fonts.googleapis.com/icon?family=Material+Icons')
        // end CDN

        block scripts
